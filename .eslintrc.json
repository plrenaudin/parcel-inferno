{
  "extends": ["eslint:recommended", "prettier"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "jest": true,
    "node": true
  },
  "plugins": ["babel", "react", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "react/jsx-uses-vars": 2,
    "no-invalid-this": 0,
    "babel/no-invalid-this": 1,
    "func-style": ["error", "declaration", { "allowArrowFunctions": true }]
  }
}
